{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "lib": ["esnext", "dom", "scripthost", "es2015.promise"],
    "declaration": false,

    /* Module Options */
    "module": "esnext",
    "moduleResolution": "node",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Debug Options */
    "sourceMap": true,
    "pretty": true,
    "locale": "ja"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
